{
  "name": "react-architecture",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest --coverage --watchAll false",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "lint": "./node_modules/.bin/eslint --fix \"./src/**/*.{ts,tsx,js,jsx}\" --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier --write . \"./src/**/*.{ts,tsx,js,jsx}\"",
    "format": "prettier \"./src/**/*.{ts,tsx}\" --write",
    "new:page": "plop --plopfile ./generators/plopfile.js page",
    "new:component": "plop --plopfile ./generators/plopfile.js component",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "date-fns": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1",
    "react-scripts": "^5.0.1",
    "styled-components": "^6.0.3",
    "vite-tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^7.1.1",
    "@storybook/addon-essentials": "^7.1.1",
    "@storybook/addon-links": "^7.1.1",
    "@storybook/addon-viewport": "^7.1.1",
    "@storybook/node-logger": "^7.1.1",
    "@storybook/preset-create-react-app": "^7.1.1",
    "@storybook/react": "^7.1.1",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-react": "^4.0.1",
    "babel-eslint": "10.1.0",
    "cypress": "12.17.2",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^7.0.4",
    "jest": "^29.6.1",
    "plop": "^3.1.2",
    "prettier": "^2.8.8",
    "source-map-explorer": "^2.5.2",
    "storybook-addon-outline": "^1.4.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.0"
  },
  "resolutions": {
    "babel-loader": "8.1.0"
  },
  "lint-staged": {
    "./src/*": [
      "npm run lint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      },
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.{tsx,jsx,ts}",
      "!src/**/*.stories.{tsx,jsx,ts}"
    ],
    "coveragePathIgnorePatterns": [
      "index.ts",
      "styles.ts",
      "global.ts",
      "theme.ts",
      "interfaces.ts",
      "reportWebVitals.ts",
      "/src/routes/",
      "/src/services/",
      "/src/libs/",
      "/src/utils/",
      "/src/configs/",
      "/node_modules/",
      "/src/index.tsx",
      "\\.d\\.ts$"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "peerDependencies": {
    "react-refresh": "*"
  }
}
